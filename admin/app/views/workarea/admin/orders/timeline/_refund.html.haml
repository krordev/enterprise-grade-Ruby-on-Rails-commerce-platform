.activity
  .activity__header
    .activity__avatar
      = link_to_modifier(entry) do
        = avatar_for entry.modifier
    %h3.activity__name= link_to_modifier(entry)
    %p.activity__time= activity_time(entry.occured_at)
  .activity__message
    - if entry.model.success?
      = t('workarea.admin.orders.timeline.refund.success', type: entry.model.tender.name.downcase, amount: number_to_currency(entry.model.amount))
    - else
      = t('workarea.admin.orders.timeline.refund.failure', amount: number_to_currency(entry.model.amount))
