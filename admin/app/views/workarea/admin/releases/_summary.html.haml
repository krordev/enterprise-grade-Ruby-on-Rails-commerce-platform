= link_to release_path(model), class: 'summary' do
  %span.summary__name= model.name
  .summary__info-container
    %span.summary__info= local_time_ago(model.updated_at)
    %span.summary__info= t('workarea.admin.releases.summary.change', count: model.changesets.length)
  %span.summary__type{ title: t('workarea.admin.releases.summary.release') }= t('workarea.admin.releases.summary.release')
