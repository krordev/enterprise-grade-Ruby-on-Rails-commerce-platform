= link_to inventory_sku_path(model), class: 'summary' do
  %span.summary__name= model.name
  .summary__info-container
    %span.summary__info= local_time_ago(model.updated_at)
    %span.summary__info= t('workarea.admin.inventory_skus.summary.available_sold', available: model.available, sold: model.purchased)
  %span.summary__type{ title: t('workarea.admin.inventory_skus.summary.type') }= t('workarea.admin.inventory_skus.summary.type')
