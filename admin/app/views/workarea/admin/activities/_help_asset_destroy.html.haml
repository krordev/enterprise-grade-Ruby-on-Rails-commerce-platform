.activity
  .activity__header
    .activity__avatar
      = link_to_modifier(entry) do
        = avatar_for entry.modifier
    %h3.activity__name= link_to_modifier(entry)
    %p.activity__time= activity_time(entry.created_at)
  .activity__message
    = t('workarea.admin.activities.help_asset_destroy_html', link: link_to(t('workarea.admin.activities.help_asset'), help_assets_path))
    = link_to_restore_for(entry)
