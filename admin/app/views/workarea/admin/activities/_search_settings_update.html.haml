.activity
  .activity__header
    .activity__avatar
      = link_to_modifier(entry) do
        = avatar_for entry.modifier
    %h3.activity__name= link_to_modifier(entry)
    %p.activity__time= activity_time(entry.created_at)
  .activity__message
    = t('workarea.admin.activities.search_settings_update_html', fields: fields_clause_for(entry.tracked_changes), link: link_to(t('workarea.admin.activities.search_settings'), search_settings_path))
