      %li.pagination__node
        = link_to 'Prev', '#', class: 'pagination__navigation'
      %li.pagination__node
        = link_to 1, '#', class: 'pagination__link'
      %li.pagination__node
        %strong 2
      %li.pagination__node
        %span.pagination__navigation.pagination__navigation--disabled Next

