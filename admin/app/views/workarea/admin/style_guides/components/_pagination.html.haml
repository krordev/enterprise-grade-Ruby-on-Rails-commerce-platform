#pagination.style-guide__subsection

  %h3= link_to_style_guide('components', 'pagination')

  %p Displays a set of pagination controls. Hidden by default unless JavaScript is enabled.

  .style-guide__example-block
    %ul.pagination
      %li.pagination__node
        %span.pagination__navigation.pagination__navigation--disabled Prev
      %li.pagination__node
        %strong 1
      %li.pagination__node
        = link_to 2, '#', class: 'pagination__link'
      %li.pagination__node
        = link_to 'Next', '#', class: 'pagination__navigation'

  %p should work with 2 pages, the first being selected:
  .style-guide__example-block
    %ul.pagination
      %li.pagination__node
        %span.pagination__navigation.pagination__navigation--disabled Prev
      %li.pagination__node
        %strong 1
      %li.pagination__node
        = link_to 2, '#', class: 'pagination__link'
      %li.pagination__node
        = link_to 'Next', '#', class: 'pagination__navigation'

  %p should work with 2 pages, the last being selected:
  .style-guide__example-block
