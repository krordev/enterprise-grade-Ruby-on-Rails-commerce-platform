.summary
  = link_to model do
    %span.summary__name= model&.name || model.id
    .summary__info-container
      %span.summary__info
        - timestamp = distance_of_time_in_words_to_now(model.updated_at)
        = t('workarea.admin.summary.last_updated', timestamp: timestamp)
    %span.summary__type{ title: generic_summary_type(model) }
      = generic_summary_type(model)
