.insight
  .insight__date
    %span.insight__period= insight.reporting_on.strftime('%B %Y')
  .insight__heading= t('workarea.admin.insights.repeat_purchase_rate.title')
  .insight__body
    %p.insight__note= t('workarea.admin.insights.repeat_purchase_rate.info')
    %table
      %thead
        %tr
          %th.align-center= t('workarea.admin.fields.days_since_first_purchase')
          %th.align-center= t('workarea.admin.fields.new_customers')
          %th.align-center= t('workarea.admin.fields.purchased_again')
          %th.align-center= t('workarea.admin.fields.percent_purchased_again')
      %tbody
        - insight.results.each do |result|
          %tr
            %td.align-center= result.days_ago
            %td.align-center= number_with_delimiter result.purchased
            %td.align-center= number_with_delimiter result.purchased_again
            %td.align-center= insights_number_to_percentage(result.percent_purchased_again)
